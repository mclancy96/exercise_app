<% @time = Time.use_zone('America/New_York') {Date.current.strftime("%A")} %>

<%= pb_rails("card", props: { background: "dark", dark: true, margin_bottom: "sm", border_none: true, margin_top: 'none', margin_x: 'none', border_radius: "none" })  do %>
  <%= pb_rails('flex', props: {justify: 'between'}) do %>
    <%= pb_rails('flex/flex_item') do %>
      <%= pb_rails('title', props: {text: 'Exercise', dark: true}) do %>
        <%= link_to "Exercise", root_path %>
      <% end %>
    <% end %>
    <%= pb_rails('flex/flex_item') do %>
      <%= pb_rails('title', props: {text: @time, dark: true}) %>
    <% end %>
  <% end %>
<% end %>
