<%= pb_rails("table/table_row") do %>
  <%= pb_rails("table/table_cell") do %>
    <%= routine_exercise.exercise.name %>
  <% end %>

  <%= pb_rails("table/table_cell") do %>
    <%= routine_exercise.day_of_week.titleize %>
  <% end %>

  <%= pb_rails("table/table_cell") do %>
    <%= routine_exercise.sets %>
  <% end %>

  <%= pb_rails("table/table_cell") do %>
    <%= routine_exercise.reps %> <%= routine_exercise.rep_unit %>
  <% end %>

  <%= pb_rails("table/table_cell") do %>
    <%= routine_exercise.order %>
  <% end %>

  <%= pb_rails("table/table_cell") do %>
    <%= link_to "Edit", edit_routine_exercise_path(routine_exercise) %>
  <% end %>

  <%= pb_rails('table/table_cell') do %>
    <%= button_to "Delete", routine_exercise, method: :delete %>
  <% end %>

<% end %>
