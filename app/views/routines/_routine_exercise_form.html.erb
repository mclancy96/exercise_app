<%= pb_rails('card', props: { padding: 'sm' }) do %>
  <%= pb_form_with(model: @routine_exercise, url: routine_exercises_path, local: true) do |form| %>
    <%= form.hidden_field :routine_id, value: @routine.id %>

    <%= form.collection_select :exercise_id, Exercise.all, :id, :name, props: { label: "Exercise" } %>

    <%= form.select :day_of_week, Date::DAYNAMES.each_with_index.map { |name, idx| [name, idx] }, props: { label: "Day of Week" } %>

    <%= form.number_field :order, props: { label: "Order", placeholder: "Enter order" } %>

    <%= form.number_field :sets, props: { label: "Sets", placeholder: "Enter sets" } %>

    <%= pb_rails('form_group') do %>
      <%= form.number_field :reps, props: { label: "Reps", placeholder: "Enter reps" } %>
      <%= form.text_field :rep_unit, props: { label: "Rep Unit", placeholder: "Enter rep unit" } %>
    <% end %>

    <%= form.actions do |action| %>
      <%= action.submit %>
    <% end %>
  <% end %>
<% end %>
